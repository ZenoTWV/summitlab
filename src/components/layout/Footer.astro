---
import SocialLinks from '../ui/SocialLinks.astro';
import Logo from '../ui/Logo.astro';
import FooterLogo from '../ui/FooterLogo.astro';
import { getI18n } from '../../i18n';

const t = getI18n(Astro.currentLocale);

const currentYear = new Date().getFullYear();

const legalLinks = [
  { href: '/privacy', label: t('footer.privacy') },
  { href: '/terms', label: t('footer.terms') },
  { href: '/cookies', label: t('footer.cookies') }
];
---

<footer class="bg-surface-100 border-t border-surface-200">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <!-- Logo & Social -->
      <div class="flex flex-col items-center md:items-start gap-4">
        <Logo size="sm" />
        <SocialLinks />
      </div>

      <!-- Legal Links -->
      <nav class="flex flex-wrap justify-center gap-6">
        {
          legalLinks.map((link) => (
            <a
              href={link.href}
              class="text-sm text-surface-500 hover:text-surface-700 transition-colors duration-300"
            >
              {link.label}
            </a>
          ))
        }
      </nav>
    </div>

    <!-- Copyright & Made by Summit Labs -->
    <div class="mt-8 pt-8 border-t border-surface-200 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-sm text-surface-500">
        &copy; {currentYear} {t('footer.copyright')}
      </p>
      <FooterLogo />
    </div>
  </div>
</footer>
